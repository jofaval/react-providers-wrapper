{
  "exclude": ["node_modules", "./src/classes/**/*", "//dist/**.*"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "jsx": "react",
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*", "../tests/*"]
    },
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "module": "ESNext"
  }
}
